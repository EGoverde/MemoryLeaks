<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MemoryLeaks"
             xmlns:mtk="clr-namespace:MemoryToolkit.Maui;assembly=MemoryToolkit.Maui"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             x:Class="MemoryLeaks.PopupPage"
             mtk:LeakMonitorBehavior.Cascade="True"
             Title="PopupPage">

    <VerticalStackLayout
        Padding="40">

        <Button
            Text="ClickToShowPopup" 
            Clicked="ClickToShowPopup_Clicked" />

        <syncfusion:SfPopup x:Name="popup" />
    
    </VerticalStackLayout>
    
</local:BasePage>